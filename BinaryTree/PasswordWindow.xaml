<Window x:Class="BinaryTree.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinaryTree"
        mc:Ignorable="d"
        Title="Вход для преподавателя" Height="150.8" Width="332.266">
    <Grid Margin="0,0,4,2.8">
        <PasswordBox x:Name="passwordBox" MaxLength="20" PasswordChar="*" Width="150" HorizontalAlignment="Left" Margin="107,29,0,0" VerticalAlignment="Top" Height="26" KeyDown="passwordBox_KeyDown" />
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="41,29,0,0" VerticalAlignment="Top" Height="26"/>
        <Button x:Name="OKbutton" Content="OK" HorizontalAlignment="Left" Margin="63,80,0,0" VerticalAlignment="Top" Width="75" Click="OKbutton_Click"/>
        <Button x:Name="CancelButton" Content="Отмена" HorizontalAlignment="Left" Margin="208,80,0,0" VerticalAlignment="Top" Width="75" Click="CancelButton_Click"/>

    </Grid>
</Window>
